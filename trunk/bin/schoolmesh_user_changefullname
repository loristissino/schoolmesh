#!/bin/bash

if [ $# -eq 0 ] ; then
	echo "This script is a wrapper. See schoolmesh(1) for details."
	exit 1
fi
	
FULLNAME=$1
USERNAME=$2

getent passwd $USERNAME > /dev/null

if [ $? -ne 0 ] ; then
	echo "Not a user: $USERNAME"
	exit 4
fi

sudo usermod -c "$FULLNAME" $USERNAME && echo "changed fullname: user $USERNAME ($FULLNAME)"


