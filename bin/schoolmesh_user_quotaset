#!/bin/bash

if [ $# -eq 0 ]
	then
		echo "This script is a wrapper. See schoolmesh(1) for details."
		exit 1
	fi

USERNAME=$1
SBQ=$2
HBQ=$3
SFQ=$4
HFQ=$5
BASEDIR=$6

getent passwd $USERNAME > /dev/null

if [ $? -ne 0 ] ; then
	echo "Not a user: $USERNAME"
	exit 5
fi

if [ ! -d "$BASEDIR" ] ; then
	echo "Not a directory: $BASEDIR"
	exit 7
fi

sudo setquota -u $USERNAME $SBQ $HBQ $SFQ $HFQ "$BASEDIR"
