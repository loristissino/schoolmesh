#!/bin/bash

if [ $# -eq 0 ] ; then
	echo "This script is a wrapper. See schoolmesh(1) for details."
	exit 1
fi
	
GROUP=$1
USERNAME=$2

getent passwd $USERNAME > /dev/null

if [ $? -ne 0 ] ; then
	echo "Not a user: $USERNAME"
	exit 4
fi


getent group $GROUP > /dev/null

if [ $? -ne 0 ] ; then
	echo "Not a group: $GROUP"
	exit 6
fi

sudo usermod -g $GROUP $USERNAME && echo "changed group: user $USERNAME group $GROUP"


