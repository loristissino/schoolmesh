#!/bin/bash

CONFIG_READ=0
source /var/schoolmesh/config/schoolmesh.rc $@
if [ $CONFIG_READ -ne 1 ]; then echo "Error in reading configuration"; exit 1; fi

#@ # NAME
#@
#@ {} - Create empty tables for the database
#@
#@ # SYNOPSIS
#@
#@ {} *environment*
#@
#@ # DESCRIPTION
#@
#@ Use this script to create empty tables in the database (using the schoolmesh
#@ symfony-generated script).
#@
#@ # WARNINGS
#@ 
#@ This will delete all the contents of the database. Be sure to make a backup 
#@ before using it.
#@
#@ # EXAMPLES
#@
#@	{-} prod 
#@	{-} dev

ENVIRONMENT=$1

checkOneOf $ENVIRONMENT dev prod test

SCRIPT=$(mktemp)

php symfony schoolmesh:generate-db-script --application=frontend --env=$ENVIRONMENT init $SCRIPT > /dev/null

chmod +x $SCRIPT

$SCRIPT

rm -f $SCRIPT
