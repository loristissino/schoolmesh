#!/bin/bash

CONFIG_READ=0
source /var/schoolmesh/config/schoolmesh.rc $@
if [ $CONFIG_READ -ne 1 ]; then echo "Error in reading configuration"; exit 1; fi

#@ # NAME
#@
#@ {} - Backup data from the database in SQL format
#@
#@ # SYNOPSIS
#@
#@ {} environment outfile
#@
#@ # DESCRIPTION
#@
#@ This script makes a backup of the data of SchoolMesh database, in the form 
#@ of a SQL plaintext gzipped file, with foreign key checks disabled.
#@ The output can be used with *schoolmesh_application_importtables(8)*.
#@ 
#@ # EXAMPLES
#@
#@	{-} prod mybackupfile

ENV=$1
OUTFILE=$2

checkOneOf $ENV dev prod test
checkNotFile $OUTFILE
checkNotFile $OUTFILE.sql
checkNotFile $OUTFILE.sql.gz

SCRIPT=$(mktemp)

symfony schoolmesh:generate-backup-script --application=frontend --env=$ENV $SCRIPT $OUTFILE.sql > /dev/null

chmod +x $SCRIPT

$SCRIPT

gzip $OUTFILE.sql

rm -f $SCRIPT


